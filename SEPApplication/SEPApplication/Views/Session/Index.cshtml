@model IEnumerable<SEPApplication.Models.Session>

@{
    ViewBag.Title = "Index";
    var db = ViewBag.DB as SEPApplication.Models.sepoopcsEntities;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info)
        </th>
        <th>
            Ratio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            @{
    int courseId = (int)ViewBag.CourseId;
    var count = db.Attendances.Count(a => a.Session_id == item.id);
    var total = db.Members.Count(m => m.Course_id == courseId);
            }
            @(count)/@(total)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Course.Code)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
